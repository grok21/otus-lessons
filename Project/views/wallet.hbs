<h1>Wallet</h1>
<h5>Your balance: 250 ETH</h5>

<form action="/auth/login" method="POST">
  <div class="input-field">
    <input id="publicKey" name="publicKey" type="password" class="publicKey" required min="1">
    <label for="publicKey">Enter receiver's public key</label>
    <span class="helper-text" data-error="Minimum 1 symbol"></span>
  </div>
  <div class="input-field">
    <input id="amount" name="amount" type="password" class="amount" required min="1">
    <label for="amount">Enter ETH amount</label>
    <span class="helper-text" data-error="Minimum 1 symbol"></span>
  </div>
        
  <button class="btn btn-primary" type="submit">Send</button>
</form>

<h1>Transactions history</h1>

{{#if orders.length}}
    {{#each orders}}
        <div>
          <div class="col s6 offset-s3">
            <div class="card">
              <div class="card-content">
                <span class="card-title">
                    Hash <small>{{_id}}</small>
                </span>
                <p class="date">Data: {{date}}</p>
                <p><em>{{user.userId.name}},</em> {{user.userId.email}}</p>
                
                <ol>
                    {{#each courses}}
                        <li>
                            {{course.title}} (x<strong>{{count}}</strong> )
                        </li>
                    {{/each}}
                </ol>

                <hr>

                <p>Cost: <span class="price">{{price}}</span></p>

              </div>
            </div>
          </div>
        </div>
    {{/each}}
{{else}}
    <p>There are no transactions yet...</p>
{{/if}}