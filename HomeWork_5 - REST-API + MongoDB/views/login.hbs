<div class="auth"> 
  <div class="row">
    <div class="col s12">
      <ul class="tabs">
        <li class="tab col s6"><a class="cyan lighten-5" href="#login">Вход</a></li>
        <li class="tab col s6"><a class="cyan lighten-5"href="#register">Регистрация</a></li>
      </ul>
    </div>

    <div id="login" class="col s6 offset-s3"> 
      <h3>Авторизация</h3>
      <form action="/auth/login" method="POST">
        <div class="input-field">
            <input id="email" name="email" type="email" class="validate" required min="1">
            <label for="email">E-mail</label>
            <span class="helper-text" data-error="Enter e-mail"></span>
        </div>
        <div class="input-field">
            <input id="password" name="password" type="password" class="validate" required min="1">
            <label for="password">Пароль</label>
            <span class="helper-text" data-error="Enter password"></span>
        </div>
        <button class="btn btn-primary" type="submit">Войти</button>
      </form>
    </div>

    <div id="register" class="col s6 offset-s3">
      <h3>Создать аккаунт</h3>
      <form action="/auth/register" method="POST">
        <div class="input-field">
            <input id="name" name="name" type="text" class="validate" required min="1">
            <label for="name">Имя</label>
            <span class="helper-text" data-error="Enter your name"></span>
        </div>
        
        <div class="input-field">
            <input id="email" name="email" type="email" class="validate" required min="1">
            <label for="email">E-mail</label>
            <span class="helper-text" data-error="Enter e-mail"></span>
        </div>
        <div class="input-field">
            <input id="password" name="password" type="password" class="validate" required min="1">
            <label for="password">Пароль</label>
            <span class="helper-text" data-error="Enter password"></span>
        </div>
        <div class="input-field">
            <input id="confirm" name="confirm" type="password" class="validate" required min="1">
            <label for="confirm">Подтвердите пароль</label>
            <span class="helper-text" data-error="Enter password"></span>
        </div>
        <button class="btn btn-primary" type="submit">Зарегистрироваться</button>
      </form>
    </div>
   </div>
</div>